<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/girisRelativeLayout"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/giris_arka_plan">

    <ImageView android:id="@+id/girisLogoImageView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:layout_centerVertical="true"
               android:src="@drawable/giris_logo"/>

    <ImageView android:id="@+id/girisTalkyMessageImageView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:layout_alignParentBottom="true"
               android:src="@drawable/giris_talkymessage"/>

</RelativeLayout>